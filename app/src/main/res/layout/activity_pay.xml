<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".pay"
    android:background="#FFFFFF">

    <!-- Top Bar -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="76dp"
        android:background="#F1F1F1"
        android:padding="8dp">

        <TextView
            android:id="@+id/timeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            android:text="Selected Bank Name Will be Here"
            android:textColor="#000000"
            android:textSize="16sp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true" />

        <TextView
            android:id="@+id/bankNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5sp"
            android:layout_marginStart="10sp"
            android:text="Selected Bank"
            android:textColor="#000000"
            android:textSize="18sp" />


        <ImageView
            android:id="@+id/bankLogoImageView"
            android:layout_width="wrap_content"
            android:layout_marginLeft="10sp"
            android:visibility="invisible"
            android:layout_toRightOf="@+id/bankNameTextView"
            android:layout_height="wrap_content"
            android:src="@drawable/bank_home"
            android:layout_centerVertical="true" />
        <TextView
            android:text="XXXXXXX"
            android:layout_below="@+id/bankNameTextView"
            android:textColor="#000000"
            android:textSize="16sp"
            android:layout_marginTop="10sp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="10sp"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/axisBankText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="#000000"
            android:textSize="18sp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true" />

        <ImageView
            android:id="@+id/upLogo"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:src="@drawable/upi_final"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true" />
    </RelativeLayout>

    <!-- PIN Entry Section -->
    <LinearLayout
        android:id="@+id/pin_code"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/axisBankText"
        android:layout_marginTop="100dp"
        android:gravity="center"
        tools:ignore="NotSibling">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ENTER UPI PIN"
            android:textSize="18sp"
            android:textColor="#000000"
            android:layout_marginBottom="16dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:gravity="center">

            <EditText
                android:id="@+id/et1"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/no_border_button"
                android:textColor="#000000"
                android:inputType="numberPassword"
                android:maxLength="1"
                android:textSize="18sp"
                android:gravity="center" />

            <EditText
                android:id="@+id/et2"
                android:layout_width="40dp"
                android:textColor="#000000"
                android:background="@drawable/no_border_button"
                android:layout_height="40dp"
                android:inputType="numberPassword"
                android:maxLength="1"
                android:textSize="18sp"
                android:gravity="center"
                android:layout_marginStart="8dp" />

            <EditText
                android:id="@+id/et3"
                android:layout_width="40dp"
                android:textColor="#000000"
                android:layout_height="40dp"
                android:background="@drawable/no_border_button"
                android:inputType="numberPassword"
                android:maxLength="1"
                android:textSize="18sp"
                android:gravity="center"
                android:layout_marginStart="8dp" />

            <EditText
                android:id="@+id/et4"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:textColor="#000000"
                android:inputType="numberPassword"
                android:maxLength="1"
                android:background="@drawable/no_border_button"
                android:textSize="18sp"
                android:gravity="center"
                android:layout_marginStart="8dp" />
            <EditText
                android:id="@+id/et5"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:textColor="#000000"
                android:inputType="numberPassword"
                android:maxLength="1"
                android:background="@drawable/no_border_button"
                android:textSize="18sp"
                android:gravity="center"
                android:layout_marginStart="8dp" />
            <EditText
                android:id="@+id/et6"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:textColor="#000000"
                android:inputType="numberPassword"
                android:background="@drawable/no_border_button"
                android:maxLength="1"
                android:textSize="18sp"
                android:gravity="center"
                android:layout_marginStart="8dp" />
        </LinearLayout>
        <TextView
            android:id="@+id/errorTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="#FF0000"
            android:textSize="16sp"
            android:visibility="gone"
            android:layout_below="@id/pin_code"
            android:layout_marginTop="8dp" />


        <TextView
            android:id="@+id/showHideTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SHOW"
            android:textColor="#1C71C6"
            android:textSize="16sp"
            android:layout_marginTop="16dp" />
    </LinearLayout>
    <TextView
        android:id="@+id/mid_txt"
        android:text="@string/mid_txt"
        android:layout_width="wrap_content"
        android:textColor="#000000"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_height="wrap_content"/>
    <ProgressBar
        android:id="@+id/progrssbar"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="31dp"
        android:visibility="invisible"
        android:textSize="18sp"
        app:cornerRadius="20dp" />

    <!-- Keypad -->
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:alignmentMode="alignMargins"
        android:columnCount="3"
        android:background="#E0E0E0"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true">

        <Button
            android:id="@+id/btn1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="1"
            android:background="@drawable/no_border_button"
            android:textColor="#000000"
            android:textSize="20sp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"/>

        <Button
            android:id="@+id/btn2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="2"
            android:textSize="20sp"
            android:background="@drawable/no_border_button"
            android:textColor="#000000"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="4dp" />

        <Button
            android:id="@+id/btn3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="3"
            android:textSize="20sp"
            android:background="@drawable/no_border_button"
            android:textColor="#000000"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="4dp" />

        <Button
            android:id="@+id/btn4"
            android:layout_width="0dp"
            android:textSize="20dp"
            android:layout_height="wrap_content"
            android:text="4"
            android:background="@drawable/no_border_button"
            android:textColor="#000000"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="4dp" />

        <Button
            android:id="@+id/btn5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="5"
            android:background="@drawable/no_border_button"
            android:textColor="#000000"
            android:layout_columnWeight="1"
            android:textSize="20dp"
            android:layout_rowWeight="1"
            android:layout_margin="4dp" />

        <Button
            android:id="@+id/btn6"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="6"
            android:textSize="20dp"
            android:background="@drawable/no_border_button"
            android:textColor="#000000"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="4dp" />

        <Button
            android:id="@+id/btn7"
            android:layout_width="0dp"
            android:textSize="20sp"
            android:layout_height="wrap_content"
            android:text="7"
            android:background="@drawable/no_border_button"
            android:textColor="#000000"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="4dp" />

        <Button
            android:id="@+id/btn8"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="8"
            android:background="@drawable/no_border_button"
            android:textColor="#000000"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:textSize="20sp"
            android:layout_margin="4dp" />

        <Button
            android:id="@+id/btn9"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="9"
            android:background="@drawable/no_border_button"
            android:textColor="#000000"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:textSize="20sp"
            android:layout_margin="4dp" />

        <Button
            android:id="@+id/btnClear"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Clear"
            android:background="@drawable/no_border_button"
            android:textColor="#000000"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:textSize="15sp"
            android:layout_margin="4dp" />

        <Button
            android:id="@+id/btn0"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="0"
            android:background="@drawable/no_border_button"
            android:textColor="#000000"
            android:layout_columnWeight="1"
            android:textSize="20sp"
            android:layout_rowWeight="1"
            android:layout_margin="4dp" />

        <Button
            android:id="@+id/btnEnter"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Enter"
            android:background="@drawable/no_border_button"
            android:textColor="#000000"
            android:textSize="15sp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="4dp" />

    </GridLayout>


</RelativeLayout>
